<Page x:Class="Brusnika.Views.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Brusnika.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Background="#D4B9BB"
      Title="ProfilePage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height=".1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Профиль" FontSize="25" FontWeight="Bold"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Имя:" Height="50"/>
                <Border Height="10"/>
                <TextBlock Text="Фамилия:" Height="50"/>
                <Border Height="10"/>
                <TextBlock Text="Логин:" Height="50"/>
                <Border Height="10"/>
                <TextBlock Text="Пароль:" Height="50"/>
                <Border Height="10"/>
                <Button Name="EditProfileBtn" Content="Редактировать" Click="EditProfileBtn_Click" Height="50"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBox Name="NameTb" Text="{Binding Name}" Height="50"/>
                <Border Height="10"/>
                <TextBox Name="LastnameTb" Text="{Binding Lastname}" Height="50"/>
                <Border Height="10"/>
                <TextBox Name="LoginTb" Text="{Binding Login}" Height="50"/>
                <Border Height="10"/>
                <PasswordBox Name="PasswordPb" Height="50"/>
                <Border Height="10"/>
                <Button Name="CloseBtn" Content="Назад" Click="CloseBtn_Click" Height="50"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
